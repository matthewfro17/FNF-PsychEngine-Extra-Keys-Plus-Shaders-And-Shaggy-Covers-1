				if (notes[1] > -1 && notes[1] > highestMania)
				{
					highestMania = notes[1];
				}
			}*/

            songJson.mania = Note.defaultMania;
			trace("Song mania value is NULL, set to " + Note.defaultMania);
        }
	}

